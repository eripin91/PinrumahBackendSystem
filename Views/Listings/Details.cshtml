@section Scripts
{
    <style>
        ._tooltip {
            position: relative;
            display: inline-block;
        }

            ._tooltip ._tooltiptext {
                visibility: hidden;
                width: 140px;
                background-color: #555;
                color: #fff;
                text-align: center;
                border-radius: 6px;
                padding: 5px;
                position: absolute;
                z-index: 1;
                bottom: 150%;
                left: 50%;
                margin-left: -75px;
                opacity: 0;
                transition: opacity 0.3s;
            }

                ._tooltip ._tooltiptext::after {
                    content: "";
                    position: absolute;
                    top: 100%;
                    left: 50%;
                    margin-left: -5px;
                    border-width: 5px;
                    border-style: solid;
                    border-color: #555 transparent transparent transparent;
                }

            ._tooltip:hover ._tooltiptext {
                visibility: visible;
                opacity: 1;
            }
    </style>
    <script>
        function myFunction(tooltipId) {
            var tempInput = document.createElement("input");
            tempInput.value = "@url";
            document.body.appendChild(tempInput);
            tempInput.select();
            document.execCommand("copy");
            document.body.removeChild(tempInput);

            var tooltip = document.getElementById(tooltipId);
            tooltip.innerHTML = "Link berhasil di copy";
        }

        function outFunc(tooltipId) {
            var tooltip = document.getElementById(tooltipId);
            tooltip.innerHTML = "Klik untuk copy link";
        }
    </script>
