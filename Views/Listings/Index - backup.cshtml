@model PinBackendSystem.Models.ListingPropertyTypeViewModel

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="_branding-image-index"><img class="branding__image" alt="Pinrumah" width="170" height="60" src="~/theme/dist/img/logopinrumah.png"></div>
    </div>

    <!-- Main content -->
    <section class="content">
        <div class="_detail-main-index">
            <form asp-controller="Listings" asp-action="Index" method="get">
                <p>
                    <div class="form-row">
                        <div class="col-lg-4">
                            <input type="text" asp-for="SearchString" value="@ViewData["CurrentFilter"]" placeholder="Cari berdasarkan judul" class="form-control" />
                        </div>
                        <div class="col-lg-4 _hide-in-mobile">
                            <select id="PropertyType" name="PropertyType" asp-items="Model.PropertyType" class="form-control">
                                <option value="">Tipe Properti</option>
                            </select>
                        </div>
                        <div class="col-lg-4">
                            <div class="mt-1 _hide-in-desktop">&nbsp;</div>
                               
                            <input type="submit" value="Search" class="btn-primary form-control" />
                            
                        </div>
                    </div>
                </p>
            </form>
         </div>
        <div class="_detail-main-index">
            @{int i = 0;}
            @foreach (var item in Model.Listings)
            {
                string carouselid = "carouselExampleIndicators" + @i;
                string targetCarouselId = "#" + carouselid;
                @i++;
                <div class="box box-primary _box-solid">
                    <div class="box-body box-profile">
                        <!--CAROUSEL CODE GOES HERE-->

                        <div id=@carouselid class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target=@targetCarouselId data-slide-to="0" class="active"></li>
                                @if (!string.IsNullOrEmpty(item.ImagePath2))
                                {
                                    <li data-target=@targetCarouselId data-slide-to="1"></li>
                                }
                                @if (!string.IsNullOrEmpty(item.ImagePath3))
                                {
                                    <li data-target=@targetCarouselId data-slide-to="2"></li>
                                }
                                @if (!string.IsNullOrEmpty(item.ImagePath4))
                                {
                                    <li data-target=@targetCarouselId data-slide-to="3"></li>
                                }
                                @if (!string.IsNullOrEmpty(item.ImagePath5))
                                {
                                    <li data-target=@targetCarouselId data-slide-to="3"></li>
                                }
                            </ol>
                            <a asp-action="Details" asp-route-id="@item.Id">
                                <div class="carousel-inner _carousel-container">
                                    @{
                                        if (!string.IsNullOrEmpty(item.ImagePath1))
                                        {
                                            <div class="carousel-item active">
                                                <img class="d-block w-100 img-carousel" src="@Url.Content(item.ImagePath1)" alt="@Html.DisplayFor(model => item.ImagePath1)">
                                            </div>
                                        }
                                        if (!string.IsNullOrEmpty(item.ImagePath2))
                                        {
                                            <div class="carousel-item">
                                                <img class="d-block w-100 img-carousel" src="@Url.Content(item.ImagePath2)" alt="@Html.DisplayFor(model => item.ImagePath2)">
                                            </div>
                                        }
                                        if (!string.IsNullOrEmpty(item.ImagePath3))
                                        {
                                            <div class="carousel-item">
                                                <img class="d-block w-100 img-carousel" src="@Url.Content(item.ImagePath3)" alt="@Html.DisplayFor(model => item.ImagePath3)">
                                            </div>
                                        }
                                        if (!string.IsNullOrEmpty(item.ImagePath4))
                                        {
                                            <div class="carousel-item">
                                                <img class="d-block w-100 img-carousel" src="@Url.Content(item.ImagePath4)" alt="@Html.DisplayFor(model => item.ImagePath4)">
                                            </div>
                                        }
                                        if (!string.IsNullOrEmpty(item.ImagePath5))
                                        {
                                            <div class="carousel-item">
                                                <img class="d-block w-100 img-carousel" src="@Url.Content(item.ImagePath5)" alt="@Html.DisplayFor(model => item.ImagePath5)">
                                            </div>
                                        }

                                    }

                                </div>
                            </a>
                            <a class="carousel-control-prev" href=@targetCarouselId role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href=@targetCarouselId role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>

                        <!--Carousel code end -->
                        <h3 class="profile-username text-center">@Html.DisplayFor(model => item.PropertyId)</h3>

                        <p class="text-muted text-center">@Html.DisplayFor(model => item.Title)</p>
                        <p class="text-muted text-center">
                            @Html.DisplayFor(model => item.Address)<br />
                            <span class="text-green text-lg">@Html.DisplayFor(model => item.Price)</span>
                        </p>
                        <hr />
                        <i class="fa fa-bed light"></i> @Html.DisplayFor(model => item.NoOfBed) <i class="fa fa-bath">
                        </i>@Html.DisplayFor(model => item.NoOfBath)
                        <i class="fa fa-car"></i>@Html.DisplayFor(model => item.NoOfGarage)
                    </div>
                <!-- /.box-body -->
                </div>
            }
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
