                </ul>
                <div class="_branding-image-index"><img class="branding__image" alt="Pinrumah" width="170" height="47" src="~/theme/dist/img/logopinrumah.png"></div>
                <partial name="_LoginPartial" />
            </div>
        </nav>
        <!-- /.navbar -->
