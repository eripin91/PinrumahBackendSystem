<body class="skin-blue layout-top-nav">
    <!-- Site wrapper -->
    <div class="wrapper ">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light _hide-in-mobile">
            <div class="container">
                <!-- Left navbar links -->
                <ul class="navbar-nav">
                    <li class="nav-item d-sm-inline-block">
                        <a asp-controller="Listings" asp-action="Home" class="nav-link text-pinrumah-color">Home</a>
                    </li>
                    <li class="nav-item d-sm-inline-block">
                        <a asp-controller="Home" asp-action="Contact" class="nav-link text-pinrumah-color">Contact</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item d-sm-inline-block">
                            <a asp-controller="Listings" asp-area="Admin" asp-action="Personal" class="nav-link">Admin Page</a>
                        </li>
