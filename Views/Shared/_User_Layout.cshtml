                </span>
            </button>

            <!-- Collapsible content -->
            <div class="collapse navbar-collapse" id="navbarSupportedContent1">

                <!-- Links -->
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item d-sm-inline-block">
                        <a asp-controller="Listings" asp-action="Index" class="nav-link text-pinrumah-color">Home</a>
                    </li>
                    <li class="nav-item d-sm-inline-block">
                        <a asp-controller="Home" asp-action="Contact" class="nav-link text-pinrumah-color">Contact</a>
                    </li>
                </ul>

                <!-- Links -->
                <partial name="_LoginPartial" />
            </div>

