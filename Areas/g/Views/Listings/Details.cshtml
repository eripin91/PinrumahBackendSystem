<!-- Content Wrapper. Contains page content -->
<div>
    <div class="container-fluid">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm">
                            <li class="breadcrumb-item"><a asp-action="Index">Listing</a></li>
                            <li class="breadcrumb-item active">View</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <div class="_branding-image"><img class="branding__image" alt="Pinrumah" width="170" height="47" src="~/theme/dist/img/logopinrumah.png"></div>
    </div>
    <div class="container-fluid">
        <div class="row bg-gray-light">
            <!--desktop title -->
            <div class="col-lg-3 _hide-in-mobile">
                <div class="_left-main-banner">
                    <h1>@Html.DisplayFor(model => model.Address)</h1>
                    <br /><br /><i class="fa fa-bed light"></i> @Html.DisplayFor(model => model.NoOfBed) <i class="fa fa-bath"></i>@Html.DisplayFor(model => model.NoOfBath) Apartment
                    <br /><br />@Html.DisplayFor(model => model.Price)
                </div>
            </div>
            <div class="col-lg-6">
                <a href="#myModal">
                    <img class="img-mosaic _img-hero" data-target="#myModal" data-toggle="modal" src="@Url.Content(Model.ImagePath1)" />
                </a>
            </div>
            <!--mobile title-->
            <div class="col-lg-3 _hide-in-desktop">
                <div class="_box-main-detail">
                    <h1>@Html.DisplayFor(model => model.Address)</h1>
                    <br /><br /><i class="fa fa-bed light"></i> @Html.DisplayFor(model => model.NoOfBed) <i class="fa fa-bath"></i>@Html.DisplayFor(model => model.NoOfBath) Apartment
                    <br /><br />@Html.DisplayFor(model => model.Price)
                </div>
            </div>

            <div class="col-lg-3 _hide-in-mobile">
                    @{
                        if (!string.IsNullOrEmpty(Model.ImagePath2))
                        {
                            <a href="#myModal">
                                <img class="img-mosaic _img-side" data-target="#myModal" data-toggle="modal" src="@Url.Content(Model.ImagePath2)" />
                            </a>
                        }
                        if (!string.IsNullOrEmpty(Model.ImagePath3))
                        {
                            <a href="#myModal">
                                <img class="img-mosaic _img-side" data-target="#myModal" data-toggle="modal" src="@Url.Content(Model.ImagePath3)" />
                            </a>
                        }
                        if (!string.IsNullOrEmpty(Model.ImagePath4))
                        {
                            <a href="#myModal">
                                <div class="overlay-container">
                                    <img class="img-mosaic _img-side" data-target="#myModal" data-toggle="modal" src="@Url.Content(Model.ImagePath4)" />
                                    @if (!string.IsNullOrEmpty(Model.ImagePath5))
                                    {
                                        <div class="_overlay" data-target="#myModal" data-toggle="modal">+1</div>
                                    }
                                </div>
                            </a>
                        }

                    }
            </div>

        </div>
            <div class="row">
                <div class="_detail-main">
                    <div class="_detail-content-middle col-lg-8">
                        <h2>Deskripsi</h2>
                        <div class="description">
                            @Html.Raw(Model.Description.Replace("\r\n", "<br />"))
                        </div>
                        <hr />
                        <h2>Fitur properti</h2>
                        <div class="_propertyFeatures-section">
                            <div class="_propertyFeatures"><i class="fa fa-square"></i>&nbsp;Luas tanah : @Html.DisplayFor(model => model.LandSize)</div>
                            <div class="_propertyFeatures"><i class="fa fa-building"></i>&nbsp;Luas bangunan : @Html.DisplayFor(model => model.BuildingSize)</div>
                            <div class="_propertyFeatures"><i class="fa fa-arrows-alt-v"></i>&nbsp;Bangunan @Html.DisplayFor(model => model.NoOfFloor) tingkat</div>
                            <div class="_propertyFeatures"><i class="fa fa-car"></i>&nbsp;Garasi : @Html.DisplayFor(model => model.NoOfGarage)</div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="box box-primary _box-agent-info">
                            <div class="box-body box-profile">
                                @*<div class="text-center">
                                <img class="profile-user-img img-responsive img-circle" src="~/theme/dist/img/user4-128x128.jpg" alt="User profile picture">
                            </div>*@
                                <h3 class="profile-username text-center">@Html.DisplayFor(model => model.AgentName)</h3>

                                <p class="text-muted text-center">@Html.DisplayFor(model => model.AgentMobileNo)</p>
                                <hr />
                                <b>Pinrumah </b><br />
                                Taman Anggrek 2-14C<br />
                                Jl. S.Parman Jakbar 11470<br />
                                +62 21 633 8080<br />
                                @{
                                    string apiWA = "https://api.whatsapp.com/send?phone=" + Model.AgentMobileNo + "&text=Saya%20tertarik%20untuk%20dengan%20rumah%20kode%20" + Model.PropertyId;
                                }
                                <a href=@apiWA class="btn btn-primary btn-block"><b>Contact WA</b></a>
                            </div>
                            <!-- /.box-body -->
                        </div>
                    </div>
                </div>

            </div>
        </div>

    <!--begin modal window-->
    <div class="modal fade" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="box box-solid">
                        <div class="box-body">
                            <!--CAROUSEL CODE GOES HERE-->

                            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                                <ol class="carousel-indicators">
                                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                    @if (!string.IsNullOrEmpty(Model.ImagePath2))
                                    {
                                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.ImagePath3))
                                    {
                                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.ImagePath4))
                                    {
                                    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.ImagePath5))
                                    {
                                    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                                    }
                                </ol>
                                <div class="carousel-inner _carousel-container">
                                    @{
                                        if (!string.IsNullOrEmpty(Model.ImagePath1))
                                        {
                                            <div class="carousel-item active">
                                                <img class="d-block w-100 img-carousel" src="@Url.Content(Model.ImagePath1)" alt="@Html.DisplayFor(model => model.ImagePath1)">
                                            </div>
                                        }
                                        if (!string.IsNullOrEmpty(Model.ImagePath2))
                                        {
                                            <div class="carousel-item">
                                                <img class="d-block w-100 img-carousel" src="@Url.Content(Model.ImagePath2)" alt="@Html.DisplayFor(model => model.ImagePath2)">
                                            </div>
                                        }
                                        if (!string.IsNullOrEmpty(Model.ImagePath3))
                                        {
                                            <div class="carousel-item">
                                                <img class="d-block w-100 img-carousel" src="@Url.Content(Model.ImagePath3)" alt="@Html.DisplayFor(model => model.ImagePath3)">
                                            </div>
                                        }
                                        if (!string.IsNullOrEmpty(Model.ImagePath4))
                                        {
                                            <div class="carousel-item">
                                                <img class="d-block w-100 img-carousel" src="@Url.Content(Model.ImagePath4)" alt="@Html.DisplayFor(model => model.ImagePath4)">
                                            </div>
                                        }
                                        if (!string.IsNullOrEmpty(Model.ImagePath5))
                                        {
                                            <div class="carousel-item">
                                                <img class="d-block w-100 img-carousel" src="@Url.Content(Model.ImagePath5)" alt="@Html.DisplayFor(model => model.ImagePath5)">
                                            </div>
                                        }

                                    }
                                </div>
                                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>
                        <!-- /.box-body -->
                    </div>

                </div>
                <div class="modal-footer">
                    <button class="btn-sm close" type="button" data-dismiss="modal">Close</button>
                    <!--end modal-footer-->
                </div>
                <!--end modal-content-->
            </div>
            <!--end modal-dialoge-->
        </div>
        <!--end myModal-->>
    </div>
</div>

